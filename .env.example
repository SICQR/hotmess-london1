# HOTMESS LONDON - Environment Variables
# Copy this file to .env and fill in your values

# Shopify Storefront API
VITE_SHOPIFY_DOMAIN=your-store.myshopify.com
VITE_SHOPIFY_STOREFRONT_TOKEN=your_storefront_access_token

# Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key

# Stripe
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# Optional: Mapbox for maps
VITE_MAPBOX_TOKEN=pk.your_mapbox_token_here

# Optional: Telegram Bot (server-side)
HOTMESS_NEW_BOT_TOKEN=your_telegram_bot_token_here

# Optional: Stripe Secret Key (server-side only)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Optional: OpenAI (for future AI features)
OPENAI_API_KEY=your_openai_key_here

# Optional: Sentry (for error tracking)
VITE_SENTRY_DSN=your_sentry_dsn_here
